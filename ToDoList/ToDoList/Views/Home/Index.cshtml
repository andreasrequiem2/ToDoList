@model ToDoList.ViewModel.ThingsViewModel

<h2>Things to Do</h2>


<ul>
    @foreach (var thing in Model.Things)
    {
        <li>@thing.Thing - @thing.Due - @thing.IsDone</li>
    }
</ul>


<hr />


<h3>Create New Thing to Do</h3>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Task:</label>
        <input type="text" id="thing" name="Thing" class="form-control" />
    </div>
    <div class="col-sm-2">
        <input type="datetime-local" class="form-control" id="inputTask" name="inputTask">
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        <select id="category" name="IdCategory" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.CategoryId">@category.NameCategory</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>